<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Setono\SyliusFacebookPlugin\Model\Pixel"
                       table="setono_sylius_facebook__pixel">
        <indexes>
            <index columns="enabled"/>
        </indexes>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="pixelId" column="pixel_id" unique="true"/>
        <field name="customAccessToken" column="custom_access_token" nullable="true"/>

        <field name="enabled" column="enabled" type="boolean"/>

        <many-to-many field="channels" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-table name="setono_sylius_facebook__pixel_channels">
                <join-columns>
                    <join-column name="pixel_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="channel_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </mapped-superclass>
</doctrine-mapping>
